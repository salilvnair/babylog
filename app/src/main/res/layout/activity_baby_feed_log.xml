<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.BabyFeedLog">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_baby_log"
        android:background="@color/primary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/CustomToolbarStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <Button
            android:id="@+id/toolbar_btn_show_all_logs"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="Today's Log"
            android:textSize="15dp"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_gravity="right"
            app:iconGravity="textStart"
            android:background="?attr/selectableItemBackground"
            android:drawableLeft="@drawable/ic_baseline_filter_list_24"
            />

        <Button
            android:id="@+id/toolbar_btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="Clear Old Log"
            android:textSize="15dp"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingLeft="0dp"
            android:paddingRight="10dp"
            android:paddingBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_gravity="left"
            app:iconGravity="textStart"
            android:background="?attr/selectableItemBackground"
            android:drawableLeft="@drawable/ic_baseline_delete_sweep_24"
            />
    </androidx.appcompat.widget.Toolbar>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_baby_logs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="?attr/actionBarSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_btn_show_all_logs">
    </androidx.recyclerview.widget.RecyclerView>
</FrameLayout>